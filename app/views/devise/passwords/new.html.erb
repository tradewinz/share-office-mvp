<div class="container">

    <h2>Forgot your password? No problem.</h2>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
      <div class="row panel panel-border">
        <fieldset class="padtop">
          <div class="control-group">
            <label class="control-label"><%= f.label :email %></label>
            <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
          </div>
        </fieldset>

        <div class="controls">
          <%= f.submit "Send me reset password instructions", :class => "btn btn-large btn-primary" %>
        </div>
      </div>
<% end %>

</div>