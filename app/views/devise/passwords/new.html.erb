<div class="container">
  <div class="row">
    <div class="text-center">
        <h3>Forgot your password? No problem.</h3>
    </div>
  </div>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
      <div class="row panel panel-border">
        <div class="text-center">
            <h4 class="muted">We will email you instructions on how to reset your password.</h4>
        </div>
        <div class ="span6 offset3">

            <fieldset class="padtop">
              <div class="control-group">
                <label class="control-label"><%= f.label :email %></label>
                <div class="controls"><%= f.email_field :email, :autofocus => true %></div>
              </div>
            </fieldset>

            <div class="controls padtopsmall">
              <%= f.submit "Reset Password", :class => "btn btn-large btn-primary" %>
            </div>
      </div>
    </div>
<% end %>

</div>
<script type="text/javascript">
    mixpanel.track("Viewed ForgotPassword");
</script>