<div class = "container">

  <div class="row">

    <div class="text-center">
      <h3>Sign up for <b> free </b> to post your listing </h3>
    </div>

  </div>

  <div class="row panel panel-border">
    <div class="text-center linkedin">
      <a href= "<%=user_omniauth_authorize_path(:linkedin_oauth2) %>">
        <%= image_tag("btn_linkedin.png") %>
      </a>
    </div>

    <div class="sepa"> or sign up using your email </div>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="row">
          <div class="span6 offset3 content-center">
            <fieldset class="padtop padbottom">

              <div class="control-group">
                <label class="control-label">Username *: </label>
                <div class="controls"> <%= f.text_field :name, :autofocus => true %>  </div>
              </div>

              <div class="control-group">
                <label class="control-label">Email address:</label>
                <div class="controls"> <%= f.email_field :email %>  </div>
              </div>

              <!--if user is from linkedin no need to enter password to change profile data-->
              <% if f.object.password_required? %>

                  <div class="control-group">
                    <label class="control-label">Password:</label>
                    <div class="controls"> <%= f.password_field :password %>  </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label">Password Confirmation:</label>
                    <div class="controls"> <%= f.password_field :password_confirmation %>  </div>
                  </div>

              <% end %>

              <div class="control-group">
                <div class="controls padtopsmall">
                  <%= f.submit "Sign Up", :class => "btn btn-large btn-primary" %>
                </div>
              </div>

            </fieldset>

          </div>

        </div>

       </div>

    <% end %>

</div>

