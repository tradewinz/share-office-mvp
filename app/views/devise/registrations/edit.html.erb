<div class = "container">

    <div class="row">
      <div class="text-center">
        <h3>Update your Profile</h3>
      </div>
    </div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

   <div class="row panel panel-border">
     <div class="span8 offset1">
         <fieldset class="padtop">

          <div class="control-group">
            <label class="control-label">Username *: </label>
            <div class="controls"> <%= f.text_field :name %>  </div>
          </div>

           <div class="control-group">
             <label class="control-label">First Name: </label>
             <div class="controls"> <%= f.text_field :fname %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Last Name: </label>
             <div class="controls"> <%= f.text_field :lname %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Profile Photo link:</label>
             <div class="controls"> <%= f.text_field :photo %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Email address *:</label>
             <div class="controls"> <%= f.email_field :email, :autofocus => true %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Phone number:</label>
             <div class="controls"> <%= f.phone_field :phone %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Company:</label>
             <div class="controls"> <%= f.text_field :company %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Industry:</label>
             <div class="controls"> <%= f.text_field :industry %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">Location:</label>
             <div class="controls"> <%= f.text_field :location %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">LinkedIn Profile link:</label>
             <div class="controls"> <%= f.url_field :website %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">LinkedIn Connections:</label>
             <div class="controls"> <%= f.text_field :connections %>  </div>
           </div>

           <div class="control-group">
             <label class="control-label">About You:</label>
             <div class="controls"> <%= f.text_field :description %>  </div>
           </div>

           <!--if user is from linkedin no need to enter password to change profile data-->
           <% if f.object.encrypted_password.present? %>
               <div class="control-group">
                 <label class="control-label">Current Password *</label>
                 <div class="controls"> <%= f.password_field :current_password %>
                   <i>(we need your current password to confirm your changes)</i></div>
               </div>

               <hr>
               <h3>Change Password</h3>
               <div class="control-group">
               <label class="control-label">New Password </label>
                 <div class="controls"> <%= f.password_field :password, :autocomplete => "off" %>
                 <i>(leave blank if you don't want to change it)</i> </div>
               </div>

               <div class="control-group">
                 <label class="control-label">Password confirmation: </label>
                 <div class="controls"><%= f.password_field :password_confirmation %>
                 <i>(leave blank if you don't want to change it)</i> </div>
               </div>


           <% end %>

           <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
               <label class="control-label">Currently waiting confirmation for:<%= resource.unconfirmed_email %></label>
           <% end %>

          </fieldset>

         <div class="control-group">
           <div class="controls padtopsmall">
             <%= f.submit "Update profile", :class => "btn btn-large btn-primary" %>
           </div>
         </div>
     </div>

   </div>





<% end %>

<!--h4>Cancel my account</h4>

<p>Unhappy? <#%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>

</div-->

</div>

<script type="text/javascript">
    mixpanel.track("Viewed EditProfile");
</script>