  <table width="525px" border="0" align="center" cellpadding="0" cellspacing="0">
    <tr><td width="300px" valign="top">
      <%if (@office.office_images.first != nil)%>
        <img src="<%="http://res.cloudinary.com/dmcfi9vma/image/upload/" + @office.office_images.first.path%>" alt="<%=@office.title %>" width="280"/>
      <%else%>
        <img src="http://spaces.intuit.com/assets/medium_default-studio.png" alt="<%=@office.title%>" width="280" />
      <%end%>
  </td>
  <!--end left column -->

  <td valign="top">
    <table cellpadding="3">
      <tr><td>
    <% if @office.user %>
      <font size="3" color= "#bbbbbb">About the host</font>
      <table width="100%" border="0" align="left" cellpadding="3" cellspacing="0">
        <tr><td width="60px">
        <%if @office.user && @office.user.photo?%>
            <%= image_tag(@office.user.photo, :alt => @office.user.name, :width => "60") %>
        <%else %>
            <img src="http://spaces.intuit.com/assets/default_person.png" alt="<%= @office.user.name%>" width="60" />
        <%end%>
      </td>
      <td valign="top">
      <%= @office.user.name %>
      <% if @office.user.industry? %><br><%= @office.user.industry %><% end %>
      <% if @office.user.location? %><br><%= @office.user.location %><% end %>
      </td></tr>
    </table>
    <% end %>
  </td></tr>
  <tr><td>
      <font size="3" color="#bbbbbb">About the space</font>
    
        <% if @office.rent? %>
        <br>
          <%= number_to_currency(@office.rent, :locale => 'en_us', :precision => 0) %>
          <% if @office.rent_type == 1 %>/ month
          <% else %>
              <% if @office.rent_type == 2 %>/ week
              <% else %>
                <% if @office.rent_type == 3 %>/ day
                <% else %>month
                <% end %>
              <% end %>
            <% end %>
          <% else %>
          <% end %>

        <br>
          <% if @office.office_type == 1 %>Office space
          <% else %>
            <% if @office.office_type == 2 %>
               Meeting room
            <% else %>
                <% if @office.office_type == 3 %>
                   Desk
                <% else %>
                  Office space
                <% end %>
            <% end %>
        <% end %>

        

        <br><% if @office.size? %>
          (<%= @office.size %> sq. ft) 
        <% end %>

        <% if @office.accomodate? %>
          - <%= @office.accomodate %> <% if @office.accomodate == 1 %>person<% else %>people<% end %>
        <% end %>
        <br>
      <p style="font-size:16px"><%= link_to 'View listing >>', office_url(@office) %> </p>
      </td></tr>
    </table>
  </td>
