<!-- other JS code -->
<script type="text/javascript">
function showLoadingImage() {
    $('#second').append('<div id="loading-image"><%= image_tag("ajax-loader.gif", :alt => "loading") %> </div>');
}

function hideLoadingImage() {
    $('#loading-image').remove();
} 



$("#continueListingBtn").click(function() {      
  $('#second').show(); 
  $('#first').hide();

  mixpanel.track("Clicked Continue");

});




$("#saveListingBtn").click(function() {
  $("#new_office").validate({
    rules: {
      "office[loc_zip]": {required: true},
      "office[title]": {required: true}
    },
    messages: {
      "office[loc_zip]": "Please tell us the zip code of your office",
      "office[title]": "Please provide a title for your listing"
    },
    errorPlacement: function(error, element) {
      element.after(error);
      element.css('border', 'solid red 2px');
    }
  });

  if ($("#new_office").valid()) {
    _gaq.push(['_trackEvent', 'SaveListing', 'User saves a listing']);
  }
});

$("#addlisting").click(function() {
  _gaq.push(['_trackEvent', 'AddListing', 'User clicks on Add Listing']);
  mixpanel.track("Clicked AddListing");

});

$("#searchBtn").click(function() {
  var val = $("#search").val();
  _gaq.push(['_trackEvent', "Search".concat(val), 'User clicks on Search']);
  mixpanel.track("Clicked Search", {location: val});
});

$("#search").keyup(function(event){
    if(event.keyCode == 13){
        $("#searchBtn").click();
    }
});

$(document).ready (function() {
var input = document.getElementById('city');
var autocomplete = new google.maps.places.Autocomplete(input);
autocomplete.setTypes(['geocode']);
});

</script>



</body>


</html>

