</head>

<body>
<div class="navbar" >
      <div class="wrapper">
            <ul class="nav nav-pills pull-right">
                <li><%= link_to "", new_office_path, :id => "addlisting", :class=>"list-btn" %></li>
                    <% if user_signed_in? %>
                      <li><%= link_to current_user.name, edit_user_registration_path %></li>
                      <li><%= link_to "MY LISTINGS", offices_path %></li>
                      <li><%= link_to "SIGN OUT", destroy_user_session_path, method: :delete %></li>
                    <% else %>
                        <li><%= link_to "SIGN IN", new_user_session_path %></li>
                    <% end %>
            </ul>
            <a href="/home">
                <h3 class="muted" style="margin-top: 1px;">
                  <%= image_tag("logo_intuit_spaces.gif", alt: "Intuit Spaces") %>
                </h3>
            </a>
      </div>
</div>





<!-- Main body pages -->

