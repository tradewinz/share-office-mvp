<%= form_for(@office) do |f| %>
    <% if @office.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@office.errors.count, "error") %> prohibited this listing from being saved:</h2>
          <ul style="margin-left:10;">
            <% @office.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="well panel-border">

      <!-- first page of wizard -->
      <div id="first">

        <div class="panel-header-gray">
          <h3 style="text-align: center"> Tell us about your space </h3>
          
        </div>

        <fieldset class="padtop">

          <div class="control-group">
            <label class="control-label">Type of space</label>
            <div class="controls">
              <%= f.select :office_type, [['Office Space', 1], ['Meeting Room', 2], ['Desk', 3]] %>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label">Accommodates</label>
            <div class="controls">  <%= f.number_field :accomodate, :value => 1, :in => 1..20, :style => "width: 5%" %>  </div>
          </div>

          <div class="control-group">
            <label class="control-label">Size</label>
            <div class="controls"> <%= f.text_field :size, :style => "width: 10%" %> sq. ft.</div>
          </div>


          <div class="control-group">
            <label class="control-label">Amenities</label>
            
            <div class="row">
              <div class="span2">
                <label class="checkbox"> <%= f.check_box :wifi %> Wi-fi </label>
                <label class="checkbox"> <%= f.check_box :parking %> Parking </label>
              </div>

              <div class="span2">
                  <label class="checkbox"> <%= f.check_box :confroom %> Conference </label>              
                  <label class="checkbox"> <%= f.check_box :ac %> AC </label>
            </div>
            
            <div class="span2">
              <label class="checkbox"> <%= f.check_box :kitchen %> Kitchen </label>
                <label class="checkbox"> <%= f.check_box :printer %> Printer </label>
            </div>
          </div>
        
        </div>
         

          <div class="control-group">
            <label class="control-label"><strong>Zip Code *</strong></label>
            <div class="controls"> <%= f.text_field :loc_zip, :placeholder => "required" %> </div>
          </div>

          <div class="control-group">
            <label class="control-label">Location</label>
            <div class="row">
              <div class="span3"> 
                <%= f.text_field :loc_addr1, :placeholder => "Street address", :style => "width: 99%" %> 
              </div>  
              <div class="span2"> 
                <%= f.text_field :loc_city, :placeholder => "City", :style => "width: 99%" %> 
              </div>
              <div class="span1">   
                <%= f.text_field :loc_state, :placeholder => "State", :style => "width: 50%" %> 
              </div>  
            </div>
          </div>

        </fieldset>
        
        <div class="panel-header-gray">
          <div class="row">
            <div class="span8 offset4">
              <button class="btn btn-large btn-primary" type="button" id="continueListingBtn">Continue</button>
              <!--a href="#" class="btn btn-large btn-primary">Continue</a-->
              <!--%= button_to "Continue", {:action => "new"}, {:class => "l_button btn btn-large btn-primary"} %-->
            </div>
          </div>
        </div>
                
      </div>

      <!--second page of wizard -->

      <div id="second" style="display: none">
        <div class="panel-header-gray">
          <h3 style="text-align: center"> You're almost done!</h3>          
        </div>

       <fieldset class="padtop">

        <div class="control-group">
          <label class="control-label">Upload a Photo</label>
          <div class="controls"> <%= f.file_field :image1 %> </div>
        </div>

        <div class="control-group">
          <label class="control-label">Rent Amount</label>
          <div class="controls"> <%= f.text_field :rent %> per <%= f.select(:rent_type, [['Monthly', 1], ['Weekly', 2], ['Daily', 3]]) %>
          </div>
        </div>
        
        <div class="control-group">
          <label class="control-label"> <strong>Title</strong> (Required) </label>
          <div class="controls"> <%= f.text_field :title %> </div>
        </div>

        <div class="control-group">
          <label class="control-label">Description</label>
          <div class="controls"> <%= f.text_area :description %> </div>
        </div>

        </fieldset>

        <div class="panel-header-gray">
          <div class="row">
            <div class="span8 offset4">
              <!--%= f.submit "Add Your Listing", :class => "btn btn-large btn-inverse btn-call-to-action" %-->
              <button class="btn btn-large btn-primary" type="submit" id="saveListingBtn">Save Your Listing</button>
            </div>
          </div>
        </div>
      </div>

    </div>
<% end %>
