<div class="hero-bg paperpanel">

    <div class="row">
      <div class="span12">
        
        <!-- search box-->
        <div class="row">
          <div class="span8 offset2">
            <div class="l_search">
              <div class="row padtop">
                <div class="span4">
                  <span class="leftgap label l_text">Find a space to work</span>
                </div>
              </div>

              <div class="row padbottom">
                <div class="span6">
                  <div class="leftgap">
                    <input type="text" class="l_input" placeholder="Enter a city">
                  </div>
                </div>

                <div class="span2">
                  <%= link_to "SEARCH", listings_path, :class => "l_button btn btn-large btn-primary" %>
                </div>
              </div>
            </div>
          </div>
        </div> <!-- end search box-->

      </div>
    </div>
  </div>
 
  <div class="features paperpanel">
    <div class="row">
      <div class="span12 padtop padbottom features">
        <div class="row">
          <div class="span4 text-center">
            
              <%= image_tag "tw/icon_home_floorplan.png", :alt=> "icon home" %>
              <h4>Make your office pay for itself</h4>
                  Earn extra money by renting out your extra office space. No listing or membership fees.
            
          </div>

          <div class="span4 text-center">

              <%= image_tag("tw/icon_home_pie.png", alt: "icon pie") %>
              <h4>Listing your space is as easy as pie </h4>
