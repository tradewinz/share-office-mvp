<!-- Modal -->
<div id="myModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Create your space alert</h3>
  </div>

  <%= simple_form_for(@alert) do |f| %>

  <div class="modal-body">
  	<%= f.error_notification %>
  	
  	<% if @alert.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@alert.errors.count, "error") %> prohibited this listing from being saved:</h2>
          <ul style="margin-left:10;">
            <% @alert.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

	  <div class="form-inputs">
	  	<label class="control-label">City *</label>
	    <div class="controls"><%= f.text_field :city %></div>

	    <label class="control-label">Email *</label>
	    <div class="controls"><%= f.text_field :email %></div>

	    <label class="control-label">Other criteria</label>
	    <div class="controls"><%= f.text_area :misc, :placeholder => "For example: space type, square footage, specific amenities, and/or rental rate", :style => "width: 240px", :rows => 20  %>
	    </div>
	  </div>
  </div>
  
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">CLOSE</button>
    <%= f.button :submit, "CREATE ALERT", :class=>"btn btn-primary"%>
  </div>

  <% end %>
</div>
